{
  "name": "bot-trading-simulator",
  "version": "1.0.0",
  "description": "Trading bot simulator with UI",
  "main": "combined-server.js",
  "scripts": {
    "start": "node combined-server.js",
    "dev": "nodemon combined-server.js",
    "build": "cd frontend && npm run build",
    "build-vercel": "cd frontend && npm install && npm run build",
    "frontend": "cd frontend && npm start",
    "backend": "cd backend && npm start",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "trading",
    "bot",
    "simulator",
    "crypto"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@binance/connector": "^3.2.0",
    "axios": "^1.6.7",
    "binance": "^2.8.17",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.3"
  }
}
